<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox alignment="CENTER" style="-fx-background-color: rgba(112, 174, 110, 0.1); -fx-border-color: rgba(112, 174, 110, 1); -fx-border-width: 0 0 0.5 0;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.ralisin.littlefarmers.controller.graphic_controller_GUI.TopBarCustomerGraphicControllerGUI">
   <children>
      <HBox alignment="CENTER_LEFT" prefHeight="36.0" prefWidth="365.0">
         <children>
            <Label prefHeight="36.0" prefWidth="290.0" text="LittleFarmers" textAlignment="RIGHT" textFill="#71ad6f">
               <font>
                  <Font name="Arial Black" size="27.0" />
               </font>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Label>
         </children>
         <opaqueInsets>
            <Insets left="20.0" />
         </opaqueInsets>
      </HBox>
      <HBox alignment="CENTER_RIGHT" prefHeight="35.0" prefWidth="490.0" spacing="5.0">
         <children>
            <Button fx:id="signUpBtn" contentDisplay="CENTER" graphicTextGap="0.0" mnemonicParsing="false" style="-fx-border-color: #70AE6E; -fx-background-color: #FFFFFF; -fx-border-radius: 4;" text="Sign Up" textFill="#70ae6e">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            <Button fx:id="loginBtn" contentDisplay="CENTER" graphicTextGap="0.0" mnemonicParsing="false" style="-fx-background-color: #70AE6E; -fx-border-radius: 4;" text="Login" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            <Button fx:id="cartBtn" mnemonicParsing="false" style="-fx-background-color: transparent;" text="Cart" textAlignment="CENTER" textFill="#70ae6e">
               <graphic>
                  <ImageView fitHeight="24.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/bag.png" />
                     </image>
                  </ImageView>
               </graphic>
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets left="15.0" right="15.0" />
         </padding>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" top="10.0" />
   </padding>
</HBox>
